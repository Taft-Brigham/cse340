<h1><%- title %></h1>
<p><%- messages() %></p>

<form action="/inv/add-classification" method="POST" id="addClassificationForm">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$" title="No spaces or special characters">
    <button type="submit">Add Classification</button>
</form>

<script>
    // Client-side validation
    document.getElementById('addClassificationForm').addEventListener('submit', function(event) {
        let classificationName = document.getElementById('classification_name').value;
        if (!/^[A-Za-z0-9]+$/.test(classificationName)) {
            event.preventDefault();
            alert('Classification name cannot contain spaces or special characters');
        }
    });
</script>